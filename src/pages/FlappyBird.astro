---
import BaseLayout from '../layouts/baseLayout.astro';
import Hero from '../components/Hero/Hero.astro';
import Description from '../components/Hero/Description.astro';
import ProjectDemo from '../components/projects/projectDemo.astro';
import IframeComponent from '../components/projects/iframme.astro';

const pageTitle = "Flappy Bird Game";
---
<BaseLayout pageTitle={pageTitle} backgroundVariant="game">
    <Hero 
        title="Flappy Bird Game"
        subtitle="A classic arcade-style game recreated with modern web technologies"
        showImage={true}
        image="/src/assets/Projects/flappybird/flappy.jpg"
        altText="Flappy Bird gameplay screenshot"
    />
    <Description 
        description="This is a simple implementation of the Flappy Bird game using HTML, CSS, and JavaScript. The game features basic mechanics where the player controls a bird that must navigate through pipes by tapping the screen or pressing space to flap its wings."
        showSkills={true}
        skillsTitle="Technologies Used"
        skills={["HTML5", "CSS3", "JavaScript", "Canvas API", "Game Physics", "Event Handling"]}
        id="about"
    />
    <ProjectDemo 
        id="projects"
        projectTitle='Flappy Bird Game'
        githubUrl="https://github.com/Ghosthi1/FlappyBird"
        itchUrl="https://ghosthi.itch.io/flappybird-clone"
        media={[
            {
                type: 'image',
                src: '/src/assets/Projects/flappybird/flappySplash.png',
                alt: 'Flappy Bird game splash screen',
                caption: 'Game splash screen with start button'
            },
            {
                type: 'image',
                src: '/src/assets/Projects/flappybird/flappy.jpg',
                alt: 'Flappy Bird gameplay screenshot',
                caption: 'Main gameplay showing bird navigating through pipes'
            }
        ]}
    />
    <IframeComponent 
        embedUrl="https://itch.io/embed-upload/12858662?color=333333"
        fallbackUrl="https://ghosthi.itch.io/flappybird-clone"
        title="Flappy Bird Game"
        width="100%"
        height="596px"
        id="flappybird-iframe"
    />
</BaseLayout>

