---
export interface Props {
    description?: string;
    showSkills?: boolean;
    skills?: string[];
    skillsTitle?: string;
    id?: string;
}

const { 
    description = `I am a computer science and cybersecurity student entering my final year, passionate about game development and creative technology. 
    Through personal projects, I have gained experience with C#, Unity, and web development using Astroâ€”the framework powering this portfolio. 
    My interest in cybersecurity has led me to hands-on learning through platforms like TryHackMe. 
    Additionally, I enjoy asset creation, using Blender and GIMP to design and produce custom visuals for my projects.`,
    showSkills = true,
    skills = [
        "C#", "Parsing", "UI Design","Unity", "Pixel art", "JSON Serialization", "MinMax AI", "Game tree traversal", 
        "Python","Game Loop Architecture", "State management",
        "3D Modeling", "Rigging", "Rendering", "Fluid Simulation",
        "2D modeling"
    ],
    skillsTitle = "Skills at a glance",
    id = "about"
} = Astro.props;

---
<div class="description" id={id}>
    <div class="text">
        <p class="description-text">{description}</p>
    </div>
    {showSkills && (
        <>
            <h2>{skillsTitle}</h2>
            <div class="skills">
                <ul class="grid">
                    {skills.map(skill => <li>{skill}</li>)}
                </ul>
            </div>
        </>
    )}
</div>