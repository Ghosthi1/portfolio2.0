---
import BaseLayout from '../layouts/baseLayout.astro';
import Hero from '../components/Hero/Hero.astro';
import Description from '../components/Hero/Description.astro';
import ProjectDemo from '../components/projects/projectDemo.astro';
import ChallengesSection from '../components/projects/challengesSection.astro';
import ReflectionsSection from '../components/projects/reflectionsSection.astro';

// Import project images
import HomeImg from '../assets/Projects/Nass/PhysicalNass.jpg';
import Omv from '../assets/Projects/Nass/omv.png';
import Terminal from '../assets/Projects/Nass/Terminal.png';


const pageTitle = "Nas";
// Define challenges data
const challenges = [
    {
        icon: "üß†",
        title:  "Wired internet connection",
        description: "Setting up the OMV OS required a wired connection but my wifi router is not accessable, so I ran the ethernet to my PC and enabled pass through to provide network access to the Raspberry Pi."
    },
    {
        icon:"‚öôÔ∏è",
        title: "Failing drive",
        description: "My Recycled drive was to old and S.M.A.R.T was giving errors, This was preventing me from using it in the NAS. I had to get a new drive to continue the project."
    },
    {
        icon: "üõ†Ô∏è",
        title: "Network segmentation",
        description: "I had planned to use a form of network segmentation either VLANs or a separate subnet to isolate the NAS from the rest of my network, but my router did not support these features so unfortunately I had to give up on this feature."
    }
];

// Define lessons/reflections data  
const lessons = [
    {
        icon: "üß©",
        title: "Vpn usage",
        description: "I used a VPN to allow secure access to the NAS when away from home. I did this by setting up a Wireguard VPN server on the NAS and configuring my devices to connect to it when away from home."
    },
    {
        icon: "üîß",
        title: "Restriction to users",
        description: "I used OMV to restrict access to anything other than shared folders. This was done to prevent other users from accessing the NAS and making changes to the system."
    }, 
    {
        icon: "üéì",
        title: "Learning experience",
        description: "This project was a great learning experience for me. I learned a lot about setting up and configuring a NAS, as well as about network security and management. From limiting user access to setting up a VPN, I gained valuable unserstanding that I can use in future projects."
    }
];
---
<BaseLayout pageTitle={pageTitle} backgroundVariant="creative">
    <Hero 
        title="Nas (Network-Attached Storage)"
        subtitle="A home project creating a personal NAS using a Raspberry Pi."
        showImage={true}
        image={HomeImg},
        altText="Raspberry Pi with hard drive" 
    />
    <Description 
        description="A home project creating a personal NAS using a Raspberry Pi, OMV, and a recycled hard drive. The NAS provides centralized storage and file sharing for my home network, with external access via VPN for secure remote connectivity."
        showSkills={true}
        skillsTitle="Technologies Used"
        skills={[
            "Linux System Administration",
            "OpenMediaVault (OMV)",
            "Raspberry Pi Configuration",
            "Network Configuration",
            "VPN Setup (WireGuard)",
            "File System Management", 
            "Network Security",
            "SSH & Remote Access",
            "Hardware Setup",
            "Troubleshooting",
            "User Access Control",
        ]}
        id="about"
    />
    <ProjectDemo 
        id="projects"
        projectTitle='Nas (Network-Attached Storage)'
        media={[{
            type: 'image',
            src: HomeImg.src,
            alt: 'Nas',
            caption: 'Home level of Nas project'
            },
            {
            type: 'image',
            src: Terminal.src,
            alt: 'Nas Vpn',
            caption: 'Vpn setup using terminal'
            },
            {
            type: 'image',
            src: Omv.src,
            alt: 'Home of omv',
            caption: 'Home screen of omv'
            }
        ]}
    />

    <ChallengesSection challenges={challenges} />

    <ReflectionsSection 
        lessons={lessons}
        futureGoals='In the future, I would like to implement network segmentation using VLANs or a separate subnet to isolate the NAS from the rest of my network. Additionally, I plan to explore more advanced backup solutions and possibly integrate cloud storage options for added redundancy and accessibility.'
    />

</BaseLayout>

