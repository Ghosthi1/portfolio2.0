---
export interface Props {
    id?: string;
    media?: Array<{
        type: 'image' | 'video';
        src: string;
        alt?: string;
        caption?: string;
    }>;
    githubUrl?: string;
    itchUrl?: string;
    projectTitle?: string;
}

const { 
    id = "about",
    media = [],
    githubUrl,
    itchUrl,
    projectTitle
} = Astro.props;
---
<div class="project-demo" id={id}>
    {media.length > 0 && (
        <div class="slideshow-container">
            <div class="slideshow" id={`slideshow-${id}`}>
                {media.map((item, index) => (
                    <div class="slide" data-index={index}>
                        {item.type === 'image' ? (
                            <img 
                                src={item.src} 
                                alt={item.alt || `Project media ${index + 1}`}
                                loading="lazy"
                            />
                        ) : (
                            <video 
                                src={item.src} 
                                controls
                                preload="metadata"
                                aria-label={item.alt || `Project video ${index + 1}`}
                            />
                        )}
                    </div>
                ))}
            </div>
            
            {media.length > 1 && (
                <>
                    <button class="slide-btn prev-btn" data-slideshow={`slideshow-${id}`} aria-label="Previous slide">
                        &#8249;
                    </button>
                    <button class="slide-btn next-btn" data-slideshow={`slideshow-${id}`} aria-label="Next slide">
                        &#8250;
                    </button>
                    
                    <div class="slide-indicators">
                        {media.map((_, index) => (
                            <button 
                                class="indicator" 
                                data-slideshow={`slideshow-${id}`}
                                data-slide={index}
                                aria-label={`Go to slide ${index + 1}`}
                            />
                        ))}
                    </div>
                </>
            )}
        </div>
    )}
    
    {media.length > 0 && (
        <div class="slide-descriptions">
            {media.map((item, index) => (
                item.caption && (
                    <div 
                        class="slide-description" 
                        data-slideshow={`slideshow-${id}`}
                        data-slide={index}
                    >
                        {item.caption}
                    </div>
                )
            ))}
        </div>
    )}
    
    {(githubUrl || itchUrl) && (
        <div class="project-links">
            {projectTitle && (
                <h3 class="project-links-title">View {projectTitle}</h3>
            )}
            <div class="links-container">
                {githubUrl && (
                    <a 
                        href={githubUrl} 
                        target="_blank" 
                        rel="noopener noreferrer" 
                        class="project-link github-link"
                        aria-label={`View ${projectTitle || 'project'} on GitHub`}
                    >
